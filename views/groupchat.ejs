                    <% } %>
                    <button class="dropdown-item block-btn" data-userid="<%= member._id %>">
                        <img src="/public/assets/block.svg" alt="">
                        Block Member
                    </button>
                <% } else { %>
                    <button class="dropdown-item unblock-btn" data-userid="<%= member._id %>">
                        <img src="/public/assets/unblock.svg" alt="">
